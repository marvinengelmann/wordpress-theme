{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,	
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"layout": {
			"contentSize": "768px",
			"wideSize": "1280px"
		},
		"color": {
			"palette": [
				{
					"color": "#ffffff",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#000000",
					"name": "Contrast",
					"slug": "contrast"
				}
			]
		},
		"spacing": {
			"spacingScale": {
				"operator": "*",
				"increment": 2,
				"steps": 16,
				"mediumStep": 2,
				"unit": "px"
			},
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		}
	],
	"patterns": [
		"intro",
		"call-to-action"
	]
}
